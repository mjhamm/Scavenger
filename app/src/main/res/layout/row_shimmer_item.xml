<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#AAAAAA">

        <ImageView
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:src="@drawable/ic_more_horiz_black_36dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more_button_content_descr"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="8dp" />

        <ImageView
            android:id="@+id/shimmer_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".5"
            android:scaleY=".5"
            android:layout_gravity="bottom|end"
            android:src="@drawable/favorite_icon_light"
            android:background="@android:color/transparent"
            android:contentDescription="@string/recipe_favorite_button_content_descr"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="4dp" />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>