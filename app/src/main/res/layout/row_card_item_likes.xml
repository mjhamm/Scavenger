<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingBottom="12dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/recipe_image_content_descr" />

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha="0.3"
        android:background="@drawable/image_gradient"
        app:layout_constraintTop_toTopOf="@id/recipe_image"
        app:layout_constraintStart_toStartOf="@id/recipe_image"
        app:layout_constraintEnd_toEndOf="@id/recipe_image"
        app:layout_constraintBottom_toBottomOf="@id/recipe_image"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:theme="@style/RatingBar"
        android:scaleX=".7"
        android:rating="3.5"
        android:scaleY=".7"
        android:layout_marginTop="8dp"
        android:transformPivotY="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:max="5"/>

    <ImageButton
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_more_horiz_white_36dp"
        app:layout_constraintEnd_toEndOf="@id/recipe_image"
        app:layout_constraintTop_toTopOf="@id/recipe_image"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/more_button_content_descr"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@id/recipe_image"
        app:layout_constraintBottom_toTopOf="@id/recipe_source"
        app:layout_constraintEnd_toStartOf="@id/recipe_like"
        android:ellipsize="end"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/recipe_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@id/recipe_image"
        app:layout_constraintEnd_toStartOf="@id/recipe_like"
        app:layout_constraintStart_toStartOf="@id/recipe_image" />

    <ImageButton
        android:id="@+id/recipe_like"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="@id/recipe_image"
        app:layout_constraintBottom_toBottomOf="@id/recipe_image"
        android:elevation="6dp"
        android:translationZ="6dp"
        android:scaleX=".5"
        android:scaleY=".5"
        android:src="@drawable/like_filled"
        android:background="@android:color/transparent"
        android:contentDescription="@string/recipe_like_button_content_descr"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>