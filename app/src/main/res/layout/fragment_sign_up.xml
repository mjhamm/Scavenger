<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signUp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="center"
            android:text="Sign Up to Save Recipes\nso you can go back to them later!"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullName_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/fullName_editText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Full Name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signUp_info" />

        <EditText
            android:id="@+id/fullName_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/fullName_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/email_editText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Email Address"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/fullName_editText"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/email_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:drawableStart="@drawable/ic_person_black_16dp"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/password_textField"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_textView" />

        <TextView
            android:id="@+id/password_textField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/password_editText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/password_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_editText" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:importantForAutofill="no"
            android:drawableStart="@drawable/ic_lock_black_16dp"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/passwordConfirm_textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_textField" />

        <TextView
            android:id="@+id/passwordConfirm_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/passwordConfirm_editText"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="Confirm Password"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/passwordConfirm_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_editText" />

        <EditText
            android:id="@+id/passwordConfirm_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:importantForAutofill="no"
            android:drawableStart="@drawable/ic_lock_black_16dp"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordConfirm_textView" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/signUpTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="By Signing Up You Agree to Scavenger's Terms &amp; Conditions and Privacy Policy"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwordConfirm_editText"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUp_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:fontFamily="@font/roboto_medium"
            app:icon="@drawable/ic_mail_outline_white_24dp"
            android:textSize="16sp"
            app:iconGravity="textStart"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/google_signUp"
            app:layout_constraintEnd_toEndOf="@id/google_signUp"
            app:layout_constraintTop_toBottomOf="@id/signUpTerms"/>

        <TextView
            android:id="@+id/signUp_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/signUp_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/google_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="8dp"
            android:background="@mipmap/btn_google_signin_light_normal_xxxhdpi"
            android:fontFamily="@font/roboto_medium"
            android:text="Sign Up with Google"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signUp_or" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/facebook_signUp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sign Up with Facebook"
            app:layout_constraintTop_toBottomOf="@id/google_signUp"
            app:layout_constraintStart_toStartOf="@id/google_signUp"
            app:layout_constraintEnd_toEndOf="@id/google_signUp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:drawableStart="@drawable/f_logo_blue_24"
            android:background="@color/com_facebook_blue"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>