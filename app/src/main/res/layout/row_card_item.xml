<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_constraintLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="24dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/recipe_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:contentDescription="@string/recipe_image_content_descr"
            android:src="@mipmap/ic_launcher"
            android:foreground="@drawable/image_overlay"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_horiz_black_36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/more_button_content_descr"
                android:padding="8dp" />

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentStart="true"
                android:layout_above="@id/recipe_source"
                android:layout_toStartOf="@id/recipe_favorite"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_condensed_regular"
                android:maxLines="1"
                android:text="@string/example_recipe_name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/recipe_source"
                app:layout_constraintEnd_toStartOf="@id/recipe_favorite"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/recipe_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/recipe_favorite"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_thin"
                android:maxLines="1"
                android:text="@string/example_recipe_source"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/recipe_favorite"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/recipe_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:scaleX=".5"
                android:scaleY=".5"
                android:src="@drawable/favorite_icon_light"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/recipe_favorite_button_content_descr"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="4dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageHolder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/ingredients_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/nutritionFacts_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Nutrition Facts"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/servings_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="end"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Serves 8"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/facts_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="10dp"
                    android:layout_below="@id/nutritionFacts_main_title"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    app:cardElevation="8dp"
                    android:background="#FFFFFF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/middleGuide"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent=".50"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide1"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.25"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.50"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.75"/>

                        <TextView
                            android:id="@+id/calories_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/middleGuide"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guide1"
                            android:text="1800"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guide1"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintTop_toBottomOf="@id/middleGuide"
                            android:text="Calories"/>

                        <TextView
                            android:id="@+id/carbs_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/middleGuide"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/guide1"
                            app:layout_constraintEnd_toStartOf="@id/guide2"
                            android:text="30g"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/guide1"
                            app:layout_constraintEnd_toStartOf="@id/guide2"
                            app:layout_constraintTop_toBottomOf="@id/middleGuide"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="Carbs"/>

                        <TextView
                            android:id="@+id/fat_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toTopOf="@id/middleGuide"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toEndOf="@id/guide2"
                            app:layout_constraintEnd_toStartOf="@id/guide3"
                            android:text="20g"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/middleGuide"
                            app:layout_constraintStart_toEndOf="@id/guide2"
                            app:layout_constraintEnd_toStartOf="@id/guide3"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="Fat"/>

                        <TextView
                            android:id="@+id/protein_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@+id/middleGuide"
                            app:layout_constraintStart_toEndOf="@id/guide3"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="16g"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/middleGuide"
                            app:layout_constraintStart_toEndOf="@id/guide3"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:fontFamily="@font/roboto_condensed_regular"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="Protein"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/recipe_attributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@id/facts_cardView"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_condensed_regular"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:text="•Vegetarian\t\t•Gluten-Free\t\t•Egg-Free"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"/>

            <View
                android:id="@+id/ingredientsTop_horizontalBar"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/recipe_attributes"
                android:background="?android:attr/textColorPrimary"/>

            <TextView
                android:id="@+id/ingredients_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/ingredientsTop_horizontalBar"
                android:fontFamily="@font/roboto_condensed_regular"
                android:background="@android:color/transparent"
                android:text="Ingredients"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/list_of_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/ingredients_main_title"
                android:layout_marginBottom="12dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="•Sugar •Flour •Eggs"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viewRecipe_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_below="@id/list_of_ingredients"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:text="View Recipe"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>