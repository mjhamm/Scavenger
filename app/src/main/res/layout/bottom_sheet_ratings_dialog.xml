<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <View
        android:id="@+id/thumb_view"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:background="@color/bg_gray"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/bottom_sheet_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/thumb_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="@color/dark_gray"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:enabled="false"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/thumb_view"
        app:layout_constraintBottom_toTopOf="@id/horiz_line"
        app:layout_constraintEnd_toEndOf="parent"/>


    <View
        android:id="@+id/horiz_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/rating_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/horiz_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/rating_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_high_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Attr_Widget.MaterialComponents.Chip.Choice"
                android:text="Highest to Lowest"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_low_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/Attr_Widget.MaterialComponents.Chip.Choice"
                android:text="Lowest to Highest"/>

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retrieve_recipes_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve Recipes"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>