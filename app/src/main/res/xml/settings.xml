<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="My Account"
        app:iconSpaceReserved="false">

        <Preference
            android:key="signIn"
            android:title="Sign In"
            app:iconSpaceReserved="false"/>

        <Preference
            android:key="signOut"
            android:title="Sign Out"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Display"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:key="inAppBrowser"
            android:defaultValue="true"
            android:title="Use In-App Web Browser"
            android:summary="Open external links with the Scavenger Browser"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Accessibility"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:key="match"
            android:defaultValue="false"
            android:title="Match Number of Ingredients"
            android:summary="Find recipes with only the number of ingredients you search with or less"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Help"
        app:iconSpaceReserved="false">
        <Preference
            android:key="help"
            android:title="Help"
            app:iconSpaceReserved="false"/>
        <Preference
            android:key="about"
            android:title="About"
            app:iconSpaceReserved="false"/>
    </PreferenceCategory>

</PreferenceScreen>